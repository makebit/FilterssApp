<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.makebit.filterss">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="com.makebit.filterss.ArticleActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.makebit.filterss.ArticlesListActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.makebit.filterss.FeedsSearchActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.makebit.filterss.MultifeedManagerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.makebit.filterss.CollectionManagerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.makebit.filterss.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.makebit.filterss.SignupActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.makebit.filterss.MultifeedCreationActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.makebit.filterss.LoadingActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.makebit.filterss.BrowserActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.makebit.filterss.IntroActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>